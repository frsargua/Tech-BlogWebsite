<!-- Footer-->
{{>footer}}

{{#each allPost}}
  <div
    class="col-11 col-md-8 col-lg-8 mx-auto d-flex flex-column justify-content-center my-4"
  >
    <h5>{{post_owner}} on the {{post_dateCreated}}</h5>
    <div class="card col-12">
      <div class="card-body bg-success bg-opacity-25">
        {{post_title}}
      </div>
      <div class="card-body">{{post_text}}</div>
        <a href="/post/{{id}}" class="btn btn-success col-2 ms-auto m-1 text-decoration-none text-white">Go To
          Post</a>
    </div>
  </div>

{{/each}}