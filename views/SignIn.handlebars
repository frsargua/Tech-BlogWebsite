<!-- Footer-->
{{>footer}}


<div class="col-11 col-md-8 col-lg-4 mx-auto h-75 d-flex align-items-center justify-content-center">
  <form id="SignInForm" action="/api/users/SignIn" method="post" class="card container-sm p-5 rounded-3">
    <div class="mb-3">
      <label for="signInEmail" class="form-label">Email address</label>
      <input type="text" name="user_name" class="form-control" id="signInEmail" aria-describedby="emailHelp" 
 placeholder="{{error}}" required />
      <div id="emailHelp" class="form-text">
        We encrypt your password using an open source hasher.
      </div>
    </div>
    <div class="mb-3">
      <label for="signInPassword" class="form-label">Password</label>
      <input type="text" name="password" class="form-control" id="signInPassword" required />
      <a href="/signup">Don't have an account yet?</a>
    </div>
    <button type="submit" class="btn btn-primary mt-4 col-6 mx-auto">
      Submit
    </button>
  </form>
</div>